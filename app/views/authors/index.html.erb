<% content_for :title, "Authors - BookStore" %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Authors</h1>
    <%= link_to "View All Books", books_path, class: "btn btn-outline-primary" %>
  </div>

  <p class="lead mb-5">Discover talented authors from around the world and explore their literary works in our collection.</p>

  <div class="row">
    <% @authors.each do |author| %>
      <div class="col-lg-6 col-xl-4 mb-4">
        <div class="card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to author.name, author_path(author), class: "text-decoration-none" %>
            </h5>
            
            <div class="mb-3">
              <small class="text-muted">
                <i class="fas fa-flag me-1"></i><%= author.nationality %>
              </small>
              <br>
              <small class="text-muted">
                <i class="fas fa-birthday-cake me-1"></i>Born <%= author.birth_date.strftime("%B %d, %Y") %>
              </small>
            </div>
            
            <p class="card-text flex-grow-1">
              <%= truncate(author.biography, length: 150) %>
            </p>
            
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <small class="text-muted">
                  <%= pluralize(author.books.count, 'book') %> in our collection
                </small>
                <% if author.books.any? %>
                  <small class="text-muted">
                    Latest: <%= author.books.order(publication_date: :desc).first.publication_date.strftime("%Y") %>
                  </small>
                <% end %>
              </div>
              
              <div class="d-grid">
                <%= link_to "View Profile", author_path(author), class: "btn btn-primary btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @authors %>
  </div>

  <!-- Quick Stats -->
  <div class="mt-5">
    <div class="card bg-light">
      <div class="card-body text-center">
        <h5 class="card-title">Author Collection Overview</h5>
        <div class="row">
          <div class="col-md-3">
            <h4 class="text-primary"><%= Author.count %></h4>
            <p class="mb-0">Total Authors</p>
          </div>
          <div class="col-md-3">
            <h4 class="text-success"><%= Author.joins(:books).distinct.count %></h4>
            <p class="mb-0">Published Authors</p>
          </div>
          <div class="col-md-3">
            <h4 class="text-warning"><%= Author.select(:nationality).distinct.count %></h4>
            <p class="mb-0">Nationalities</p>
          </div>
          <div class="col-md-3">
            <h4 class="text-info"><%= Book.count %></h4>
            <p class="mb-0">Total Books</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
