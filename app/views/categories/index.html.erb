<% content_for :title, "Book Categories - BookStore" %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Book Categories</h1>
    <%= link_to "View All Books", books_path, class: "btn btn-outline-primary" %>
  </div>

  <p class="lead mb-5">Explore our diverse collection of books organized by category. Each category contains carefully curated books to help you find exactly what you're looking for.</p>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card category-card h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category), class: "text-decoration-none" %>
            </h5>
            <p class="card-text flex-grow-1"><%= category.description %></p>
            
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <small class="text-muted">
                  <%= pluralize(category.books.count, 'book') %> available
                </small>
                <% if category.books.any? %>
                  <small class="text-muted">
                    Latest: <%= category.books.order(created_at: :desc).first.publication_date.strftime("%Y") %>
                  </small>
                <% end %>
              </div>
              
              <div class="d-grid">
                <%= link_to "Browse Books", category_path(category), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @categories %>
  </div>

  <!-- Quick Stats -->
  <div class="mt-5">
    <div class="card bg-light">
      <div class="card-body text-center">
        <h5 class="card-title">Collection Overview</h5>
        <div class="row">
          <div class="col-md-4">
            <h4 class="text-primary"><%= Category.count %></h4>
            <p class="mb-0">Categories</p>
          </div>
          <div class="col-md-4">
            <h4 class="text-success"><%= Book.count %></h4>
            <p class="mb-0">Total Books</p>
          </div>
          <div class="col-md-4">
            <h4 class="text-info"><%= Author.count %></h4>
            <p class="mb-0">Authors</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
